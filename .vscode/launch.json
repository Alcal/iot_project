{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Node: game-server",
      "cwd": "${workspaceFolder}/game-server",
      "program": "${workspaceFolder}/game-server/index.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "dart",
      "request": "launch",
      "name": "Flutter: mqtt_sandbox",
      "cwd": "${workspaceFolder}/mqtt_sandbox",
      "program": "lib/main.dart"
    },
    {
      "name": "NPM: start game-server",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
          "run",
          "start"
      ],
      "cwd": "${workspaceFolder}/game-server",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "console": "internalConsole"
  },
  {
      "type": "node",
      "request": "launch",
      "name": "Launch Game Server",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/game-server/index.js",
      "cwd": "${workspaceFolder}/game-server",
      "runtimeExecutable": "node",
      "console": "integratedTerminal"
  },
  {
      "type": "node",
      "request": "launch",
      "name": "Node: polling-server",
      "skipFiles": [
          "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/polling-server/index.js",
      "cwd": "${workspaceFolder}/polling-server",
      "runtimeExecutable": "node",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
  }
  ],
  "compounds": [
    {
      "name": "Run: server + app",
      "configurations": [
        "Node: game-server",
        "Flutter: mqtt_sandbox"
      ],
      "stopAll": true
    }
  ]
}