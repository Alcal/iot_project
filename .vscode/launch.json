    "version": "0.2.0",
    "configurations": [
        {
            "name": "NPM: start game-server",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start"
            ],
            "cwd": "${workspaceFolder}/game-server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "internalConsole"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Game Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/game-server/index.js",
            "cwd": "${workspaceFolder}/game-server",
            "runtimeExecutable": "node",
            "console": "integratedTerminal"
        }
    ]
}